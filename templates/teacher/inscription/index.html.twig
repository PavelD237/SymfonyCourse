{% extends 'base.html.twig' %}

{% block title %}Inscriptions{% endblock %}

{% block body %}
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="row card-header py-3">
            <h6 class="nav-item m-0 font-weight-bold text-primary">{{ inscriptions.count() }} Inscriptions Registred</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered border-bottom-warning" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Cours</th>
                    <th>Etudiants</th>
                    <th>Statut</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Cours</th>
                    <th>Etudiants</th>
                    <th>Statut</th>
                </tr>
                </tfoot>
                <tbody>
                {% for inscription in inscriptions %}
                    <tr>
                        <td>{{ inscription.course }}</td>
                        <td>{{ inscription.student }}</td>
                        <td>{% if inscription.state %}
                                <a class="nav-item" href="#">
                                    <button class="btn btn-success btn-circle">
                                        <i class="fa fa-check"></i>
                                    </button></a>
                            {% else %}
                                <a class="nav-item" href="#">
                                    <button type="button" class="btn btn-outline-warning btn-circle">
                                        <i class="fa fa-times"></i>
                                    </button></a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune inscriptions Ã  vos cours </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
